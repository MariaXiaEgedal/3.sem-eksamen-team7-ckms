---
const {
  htmlheading = "h2",
  size = "medium",
  font = undefined,
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

const sizeClasses = {
  large: "text-[50px] md:text-[110px] leading-[1]",
  medium: "text-[35px] md:text-[90px] leading-[1.2]",
  small: "text-[30px] md:text-[60px] leading-[1.2]",
  xsmall: "text-[20px] md:text-[30px] leading-[1.2]",
  xsmallbold: "text-[20px] md:text-[30px] leading-[1.2]",
};

const defaultFontForSize = {
  large: "font-gestura font-regular",
  medium: "font-gestura font-thin",
  small: "font-gestura font-regular",
  xsmall: "font-onsite-extended font-regular",
  xsmallbold: "font-onsite-extended font-bold",
};

const fontClass = font ? font : (defaultFontForSize[size] ?? "");
---

<Htmlheading class:list={[sizeClasses[size], fontClass, stylingclasses]}>
  <slot />
</Htmlheading>
